<%- include("./partials/header.ejs") %>

<style>
  :root {
    --foreground-color: #1f2260;
    --background-color: #35307a;
    --texture-color: #484bb6;
    --bar-color: #8a207c;
    --border-color: #bd7d4f;
    --nav-color: #262538; /* opacity add after */
    --text-color1: #ffffff;
    --text-color2: rgb(255, 255, 66);
    --astronaut: #262a6e;
  }
  .weather {
    background-color: var(--foreground-color);
    border-radius: 15px;
    padding: 20px;

  }
  .grid-block {
    display: grid;
    grid-template-columns: auto;
    grid-template-rows: auto auto;
    width: 100%;
    height: 100vh;
    gap: 20px;
  }
  .block2 {
    grid-row: span 2;
  }
  
  .heading{
    display: flex;
    align-items: center;
    justify-content: space-between;
  }
  .temperature {
    font-size: 60px;
    margin: 0;
  }
  .block1 {
    display: grid;
    grid-template-columns: auto auto auto;
    grid-template-rows: 50px auto;
    gap: 10px;
  }
  .block1 div:nth-child(1) {
    grid-column: span 3;
    border-bottom: 1px solid var(--text-color1);
    
  }
 
  .block1 div:nth-child(5) {
    grid-column: span 3;
  }
  .block1 div:nth-child(2) ,.block1 div:nth-child(3){
    border-right: 1px solid var(--text-color1);
  }
  .header-icon{
    display: flex;
    justify-content: center;
    align-items: center;
    flex-direction: column;
  }
  .header-icon img{
    height: 120px;
    width: 120px;
  }
table {
  font-family: Arial, Helvetica, sans-serif;
  border-collapse: collapse;
  width: 100%;
}

table td, table th {
  border-bottom: 1px solid var(--border-color);
  padding: 8px;
  text-align: center;
}

table tr:nth-child(even){}

table tr:hover {}

table th {
  padding-top: 12px;
  padding-bottom: 12px;
  text-align: center;
  
}
table td img{
  height: 50px;
}
.footer{
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
}
</style>
</style>
<div class="grid-block">
  <div class="weather block1">
    <% if(locals.currentData){ %>
    <div class="heading">
      <h2><%= country %>, <%= state %>, <%= city %> </h2>
      <h2 style="text-align: right;"><%= is_day %></h2>
    </div>
    <div>
      <p><%= currentData.current.time %></p>
      <p class="temperature">
        <%= currentData.current.temperature_2m %><sup style="font-size: 35px"
          ><%= currentData.current_units.temperature_2m %></sup
        >
      </p>
      <p style="font-size: 20px;"><%= description %> Weather</p>
    </div>
    <div>
      <p>
        Feels Like: <%= currentData.current.apparent_temperature %><sup>
          <%= currentData.current_units.apparent_temperature %></sup
        >
      </p>
      <p>
        Precipitation: <%= currentData.current.precipitation %> <%=
        currentData.current_units.precipitation %>
      </p>
      <p>
        Humidity: <%= currentData.current.relative_humidity_2m %> <%=
        currentData.current_units.relative_humidity_2m %>
      </p>
      <p>
        Wind: <%= currentData.current.wind_speed_10m %> <%=
        currentData.current_units.wind_speed_10m %>
      </p>
    </div>
    <div class="header-icon">
      <img src="<%= iconURL %>" alt="weather icon" />
      <p>Cloud Cover: <%= currentData.current.cloud_cover %> <%= currentData.current_units.cloud_cover %>  </p>
    </div>
    <% } %>
  </div>
  <% const data = icons(currentData.hourly.weather_code[0],1,weatherInfo) %>
  <div class="weather block3">
    <table>
      <tr class="hourly">
        <th>Time</th>
        <th>Temperature</th>
        <th>Feels like</th>
        <th>Description</th>
        <th>Prescription</th>
        <th>Wind Speed</th>
        <th colspan="2">Cloud cover</th>
      </tr>
        <% for(var i = 0 ; i <= 10 ; i++){%>
      <tr class="hourly">
        <td><%= currentData.hourly.time[i] %> <%= currentData.hourly_units.time[0] %></td>
        <td><%= currentData.hourly.temperature_2m[i] %> <%= currentData.hourly_units.temperature_2m[0] %></td>
        <td><%= currentData.hourly.apparent_temperature[i] %> <%= currentData.hourly_units.apparent_temperature[0] %></td>
        <td><%= data.description %></td>
        <td><%= currentData.hourly.relative_humidity_2m[i] %> <%= currentData.hourly_units.relative_humidity_2m[0] %></td>
        <td><%= currentData.hourly.wind_speed_10m[i] %> Km/h</td>
        <td><%=  currentData.hourly.cloud_cover[i] %> <%=  currentData.hourly_units.cloud_cover[0] %></td>
        <td><img src="<%= data.image %>" rel="icon"></td>
      </tr>
        <% } %>
    </table>
  </div>
</div>
<div height="100"></div>
<%- include("./partials/footer.ejs") %>
<% function icons(weather_code, day_code, object) {
  var is_day ;
  var w_code = weather_code.toString();
  if (day_code == 1) {
     is_day = "day";
  } else {
     is_day = "night";
  }
  return object[w_code][is_day];
} %>